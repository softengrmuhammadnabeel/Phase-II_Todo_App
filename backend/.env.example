# =============================================================================
# FASTAPI TASK BACKEND API - ENVIRONMENT CONFIGURATION TEMPLATE
# =============================================================================

# Database Configuration
# PostgreSQL connection string for Neon Serverless
# Format: postgresql+asyncpg://username:password@host:port/database?sslmode=require
# Replace with your actual Neon PostgreSQL connection details
DATABASE_URL=""

# Authentication Secret
# Secret key used for signing JWT tokens with Better Auth
# Use a strong, random secret (at least 32 characters)
BETTER_AUTH_SECRET=your-jwt-secret-key

# API Server Configuration
# Host address for the API server (0.0.0.0 for external access, 127.0.0.1 for local only)
API_HOST=0.0.0.0

# Port number for the API server (default: 8000)
API_PORT=8000

# Debug Mode Configuration
# Enable/disable debug mode (true/false)
# When enabled, provides detailed error messages and auto-reload
DEBUG=false

# Logging Configuration
# Log level for the application (DEBUG, INFO, WARNING, ERROR, CRITICAL)
# DEBUG: Most verbose, includes all messages
# INFO: Standard operational messages
# WARNING: Potential issues
# ERROR: Actual problems
# CRITICAL: Severe errors
LOG_LEVEL=INFO

# =============================================================================
# END OF CONFIGURATION TEMPLATE
