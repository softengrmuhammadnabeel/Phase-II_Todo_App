{
  "openapi": "3.0.3",
  "info": {
    "title": "Todo Backend API",
    "description": "RESTful API for managing user tasks with user-based data isolation",
    "version": "1.0.0"
  },
  "paths": {
    "/signup/users/{user_id}/tasks": {
      "get": {
        "summary": "Get all tasks for a user",
        "parameters": [
          {
            "name": "user_id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "The ID of the user whose tasks to retrieve"
          }
        ],
        "responses": {
          "200": {
            "description": "List of user's tasks",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Task"
                  }
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized - Invalid or missing JWT token"
          },
          "403": {
            "description": "Forbidden - User ID in path doesn't match authenticated user"
          }
        },
        "security": [
          {
            "BearerAuth": []
          }
        ]
      },
      "post": {
        "summary": "Create a new task for a user",
        "parameters": [
          {
            "name": "user_id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "The ID of the user creating the task"
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/TaskCreate"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Task created successfully",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Task"
                }
              }
            }
          },
          "400": {
            "description": "Bad request - Invalid input data"
          },
          "401": {
            "description": "Unauthorized - Invalid or missing JWT token"
          },
          "403": {
            "description": "Forbidden - User ID in path doesn't match authenticated user"
          }
        },
        "security": [
          {
            "BearerAuth": []
          }
        ]
      }
    },
    "/signup/users/{user_id}/tasks/{task_id}": {
      "get": {
        "summary": "Get a specific task for a user",
        "parameters": [
          {
            "name": "user_id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "The ID of the user whose task to retrieve"
          },
          {
            "name": "task_id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "integer"
            },
            "description": "The ID of the task to retrieve"
          }
        ],
        "responses": {
          "200": {
            "description": "Task details",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Task"
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized - Invalid or missing JWT token"
          },
          "403": {
            "description": "Forbidden - User ID in path doesn't match authenticated user or task doesn't belong to user"
          },
          "404": {
            "description": "Not found - Task doesn't exist"
          }
        },
        "security": [
          {
            "BearerAuth": []
          }
        ]
      },
      "put": {
        "summary": "Update a specific task for a user",
        "parameters": [
          {
            "name": "user_id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "The ID of the user whose task to update"
          },
          {
            "name": "task_id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "integer"
            },
            "description": "The ID of the task to update"
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/TaskUpdate"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Task updated successfully",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Task"
                }
              }
            }
          },
          "400": {
            "description": "Bad request - Invalid input data"
          },
          "401": {
            "description": "Unauthorized - Invalid or missing JWT token"
          },
          "403": {
            "description": "Forbidden - User ID in path doesn't match authenticated user or task doesn't belong to user"
          },
          "404": {
            "description": "Not found - Task doesn't exist"
          }
        },
        "security": [
          {
            "BearerAuth": []
          }
        ]
      },
      "delete": {
        "summary": "Delete a specific task for a user",
        "parameters": [
          {
            "name": "user_id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "The ID of the user whose task to delete"
          },
          {
            "name": "task_id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "integer"
            },
            "description": "The ID of the task to delete"
          }
        ],
        "responses": {
          "204": {
            "description": "Task deleted successfully"
          },
          "401": {
            "description": "Unauthorized - Invalid or missing JWT token"
          },
          "403": {
            "description": "Forbidden - User ID in path doesn't match authenticated user or task doesn't belong to user"
          },
          "404": {
            "description": "Not found - Task doesn't exist"
          }
        },
        "security": [
          {
            "BearerAuth": []
          }
        ]
      }
    },
    "/signup/users/{user_id}/tasks/{task_id}/complete": {
      "patch": {
        "summary": "Toggle completion status of a specific task for a user",
        "parameters": [
          {
            "name": "user_id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "The ID of the user whose task to update"
          },
          {
            "name": "task_id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "integer"
            },
            "description": "The ID of the task to update"
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "completed": {
                    "type": "boolean",
                    "description": "The new completion status for the task"
                  }
                },
                "required": ["completed"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Task completion status updated successfully",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Task"
                }
              }
            }
          },
          "400": {
            "description": "Bad request - Invalid input data"
          },
          "401": {
            "description": "Unauthorized - Invalid or missing JWT token"
          },
          "403": {
            "description": "Forbidden - User ID in path doesn't match authenticated user or task doesn't belong to user"
          },
          "404": {
            "description": "Not found - Task doesn't exist"
          }
        },
        "security": [
          {
            "BearerAuth": []
          }
        ]
      }
    }
  },
  "components": {
    "schemas": {
      "Task": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "description": "Unique identifier for the task"
          },
          "title": {
            "type": "string",
            "description": "The task title",
            "maxLength": 255,
            "minLength": 1
          },
          "description": {
            "type": "string",
            "description": "Detailed description of the task",
            "maxLength": 1000,
            "nullable": true
          },
          "completed": {
            "type": "boolean",
            "description": "Completion status of the task"
          },
          "user_id": {
            "type": "string",
            "description": "Identifier of the user who owns this task"
          },
          "created_at": {
            "type": "string",
            "format": "date-time",
            "description": "Timestamp when the task was created"
          },
          "updated_at": {
            "type": "string",
            "format": "date-time",
            "description": "Timestamp when the task was last updated"
          }
        },
        "required": ["id", "title", "completed", "user_id", "created_at", "updated_at"]
      },
      "TaskCreate": {
        "type": "object",
        "properties": {
          "title": {
            "type": "string",
            "description": "The task title",
            "maxLength": 255,
            "minLength": 1
          },
          "description": {
            "type": "string",
            "description": "Detailed description of the task",
            "maxLength": 1000,
            "nullable": true
          },
          "completed": {
            "type": "boolean",
            "description": "Initial completion status of the task",
            "default": false
          }
        },
        "required": ["title"]
      },
      "TaskUpdate": {
        "type": "object",
        "properties": {
          "title": {
            "type": "string",
            "description": "The task title",
            "maxLength": 255,
            "minLength": 1
          },
          "description": {
            "type": "string",
            "description": "Detailed description of the task",
            "maxLength": 1000,
            "nullable": true
          },
          "completed": {
            "type": "boolean",
            "description": "Completion status of the task"
          }
        }
      }
    },
    "securitySchemes": {
      "BearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT",
        "description": "JWT token for authentication and authorization"
      }
    }
  }
}